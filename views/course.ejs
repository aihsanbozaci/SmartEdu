<%- include('partials/_header.ejs');  %> 
<%- include('partials/_navigation.ejs');  %> 
	
	<div class="all-title-box">
		<div class="container text-center">
			<h1><%= course.name %><span class="m_1">Welcome to our course!</span></h1>
		</div>
	</div>
	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="https://source.unsplash.com/980x550/?coding" alt="" class="img-fluid">
						</div>
						<div class="post-content">
							<%  if (user && !(user.courses.includes(course._id))){ %> 
								<%  if (user.role==='Student' && !(user.courses.includes(course._id))){ %> 
							<div class="post-date">
								<form method="POST" action="/courses/enroll">
									<input type="hidden" name="course_id" value="<%= course._id %>">
									<button class="btn btn-lg btn-warning text-white"><span><b>ENROLL</b></span></button>
								</form>	
							</div>
							<% } %> 
							<% } %> 
							<div class="meta-info-blog">
								<span><i class="fa fa-calendar"></i> <a><%= course.createdAt %></a> </span>
							</div>
							<div class="blog-title">
								<h2><a href="#" title=""><%= course.name %></a></h2>
							</div>
							<div class="blog-desc">
								<blockquote class="default">
									<%= course.description %>
								</blockquote>
							</div>							
						</div>
					</div>
					<div class="blog-author">
						<div class="author-bio">
							<h1 class="author_name blog-item">Contact to Teacher: <a href="mailto:<%= course.user.name %>"><%= course.user.name %> </a></h1>
						</div>
					</div>
					
                </div><!-- end col -->
				<div class="col-lg-3 col-12 right-single">
						<div class="widget-search">
							<div class="site-search-area">
								<form method="GET" id="site-searchform" action="/courses">
									<div>
										<input class="input-text form-control" name="search" id="search-k" placeholder="Search..." type="text">
										<button id="searchsubmit" value="Search" type="submit"></button>
									</div>
								</form>
							</div>
						</div>
					<div class="widget-categories">
						<h3 class="widget-title">Categories</h3>
						<ul>
<% for (let i=0; i< categories.length; i++) { %>
<li><a href="/courses?categories=<%= categories[i].slug %>"><%= categories[i].name %></a></li>
<% } %>	
						</ul>
					</div>
				</div>
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->

	<%- include('partials/_footer.ejs');  %> 